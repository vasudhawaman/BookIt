  <div class="dropdown">
    <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
     Price
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
      
      
      <li><a class="dropdown-item" href="/?price=300" >300+</a></li>
      <li><a class="dropdown-item" href="/?price=400" >400+</a></li>
      <li><a class="dropdown-item" href="/?price=500" >500+</a></li>
      <li><a class="dropdown-item" href="/?price=600" >600+</a></li>
      
    </ul>
  </div>  
  </div>
<%} %>  

 <!-- All BOOKS -->
 
<div class="container">
    <div class="row" id="books">
<% books.forEach(function(book){ %>
    <div class="col-md-2">
      <div class="card">
        <img src="<%=book.image%>" class="card-img-top" alt="...">
            <div class="card-body text-wrap">
              <h5 class="card-title"><%=book.title%></h5>
              <h6 class="text-muted"><%=book.author%></h6>
              <h4 class="text-muted"> â‚¹<%=book.price%></h4>
              <p class="card-text">By <%=book.about%></p>
              <% if(locals.userID){ %> 
                <a href="/order?user=<%=userID%>&book=<%=book.book_id%>" class="btn btn-primary">Buy</a>
                <a href="/cart?user=<%=userID%>&book=<%=book.book_id%>"><span class="material-symbols-outlined">
                    add_shopping_cart
                 </span></a>
                 <a href="/reviews?book=<%=book.book_id%>&user=<%=userID%>">Reviews</a>
            <% } %> 
            <%if(!locals.userID){ %>
            <a href="/reviews?book=<%=book.book_id%>">Reviews</a>
            <% } %>
            </div>
      </div>
    </div>
    

<% }) %>
</div>
</div>

