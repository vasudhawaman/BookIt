<% if(!locals.userID){ %> 

   <div class="container">
     <div class="dropdown">
    <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
     Genre
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
      <li><a class="dropdown-item" href="/?filter=adventure" >Adventure</a></li>
      <li><a class="dropdown-item" href="/?filter=horror" >Horror</a></li>
      <li><a class="dropdown-item" href="/?filter=adventure" >Thriller</a></li>
      <li><a class="dropdown-item" href="/?filter=young-adult" >Young Adult</a></li>
      <li><a class="dropdown-item" href="/?filter=fiction" >Fiction</a></li>
      <li><a class="dropdown-item" href="/?filter=love" >Love</a></li>
      <li><a class="dropdown-item" href="/?filter=self-help" >Self-help</a></li>
    </ul>
  </div>  
